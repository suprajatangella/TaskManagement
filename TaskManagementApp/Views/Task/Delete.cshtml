@model TaskManagement.Domain.Entities.Task

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="Id" disabled class="form-control border shadow" />
                    <label asp-for="Id" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Title" disabled class="form-control border shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" disabled class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="StatusText" disabled class="form-control border shadow" />
                    <label asp-for="Status" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="PriorityText" disabled class="form-control border shadow" />
                    <label asp-for="Priority" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="AssignedToText" disabled class="form-control border shadow" />
                    <label asp-for="AssignedTo" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="CreatedBy" disabled class="form-control border shadow" />
                    <label asp-for="CreatedBy" class="ms-2 "></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="DueDate" disabled class="form-control border shadow" />
                    <label asp-for="DueDate" class="ms-2 "></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-check-circle"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Task" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

