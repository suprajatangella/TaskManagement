@model DashboardVM

<div class="container mt-4">
    <h1>Task Insights</h1>
    <div class="row">
        <!-- Dashboard Cards -->
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h4>Total Tasks</h4>
                    <p class="h2">@Model.TotalTasks</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h4>Completed Tasks</h4>
                    <p class="h2">@Model.CompletedTasks</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h4>Pending Tasks</h4>
                    <p class="h2">@Model.PendingTasks</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h4>Overdue Tasks</h4>
                    <p class="h2">@Model.OverdueTasks</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Tasks Section -->
    <div class="w-100 card border-0 p-4">
        <div class="card-header bg-success bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Recent Tasks</h2>
                </div>
            </div>
        </div>
        <div class="card-body border p-4">
            <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Due Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.RecentTasks)
                {
                    <tr>
                        <td>@task.Title</td>
                        <td>@task.StatusText</td>
                        <td>@task.DueDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>
